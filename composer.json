{
    "name": "litepie/masters",
    "description": "Laravel package for managing master data with multi-tenancy support",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "master-data",
        "multi-tenancy",
        "countries",
        "states",
        "cities",
        "categories"
    ],
    "authors": [
        {
            "name": "Lavalite Team",
            "email": "support@lavalite.org",
            "homepage": "https://lavalite.org"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^10.0|^11.0|^12.0",
        "spatie/laravel-permission": "^6.0|^7.0",
        "spatie/laravel-multitenancy": "^3.0|^4.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^10.0|^11.0",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.0|^8.0"
    },
    "autoload": {
        "psr-4": {
            "Litepie\\Masters\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Litepie\\Masters\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Litepie\\Masters\\MastersServiceProvider"
            ],
            "aliases": {
                "Masters": "Litepie\\Masters\\Facades\\Masters"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "format": "pint",
        "format-check": "pint --test",
        "analyse": "phpstan analyse",
        "post-autoload-dump": [
            "@clear-cache"
        ],
        "clear-cache": [
            "@php -r \"if (file_exists('bootstrap/cache/packages.php')) { unlink('bootstrap/cache/packages.php'); }\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
